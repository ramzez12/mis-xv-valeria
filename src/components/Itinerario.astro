<style>
  .evento-item p {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .evento-item:hover p:first-of-type {
    color: #a27735;
    transform: scale(1.08);
    text-shadow: 0 2px 8px rgba(162, 119, 53, 0.3);
  }

  .corazon-item {
    filter: drop-shadow(0 4px 12px rgba(162, 119, 53, 0.5));
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .corazon-item:hover {
    transform: scale(1.2) rotate(10deg);
    filter: drop-shadow(0 8px 20px rgba(162, 119, 53, 0.7));
  }
  
  /* Filtro dorado para #D4AF37 */
  .icono-dorado {
    filter: brightness(0) saturate(100%) invert(72%) sepia(53%) saturate(465%) hue-rotate(2deg) brightness(99%) contrast(88%);
    transition: filter 0.3s ease, transform 0.3s ease;
  }

  .icono-dorado:hover {
    filter: brightness(0) saturate(100%) invert(72%) sepia(53%) saturate(465%) hue-rotate(2deg) brightness(105%) contrast(92%) drop-shadow(0 6px 16px rgba(212, 175, 55, 0.5));
  }

  .linea-central {
    box-shadow: 0 0 15px rgba(162, 119, 53, 0.3);
  }
</style>
<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Animaci贸n del t铆tulo
  gsap.fromTo('.titulo-itinerario',
    { opacity: 0, y: -30 },
    {
      opacity: 1,
      y: 0,
      duration: 1.2,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.titulo-itinerario',
        start: 'top 85%',
        toggleActions: 'play none none none',
        once: true
      }
    }
  );
  
  // Animaci贸n SIMULTNEA de L铆nea, Flores, Corazones y Eventos
  const eventosContainer = document.getElementById('eventos-container');
  if (eventosContainer) {
      ScrollTrigger.create({
          trigger: eventosContainer,
          start: 'top 80%',
          toggleActions: 'play none none none',
          once: true,
          onEnter: () => {
              
              // L铆nea Central
              gsap.fromTo('.linea-central',
                  { opacity: 0, scaleY: 0 },
                  {
                      opacity: 1,
                      scaleY: 1,
                      duration: 1.5,
                      ease: 'power2.out',
                      transformOrigin: 'top center'
                  }
              );

              // Flores Laterales
              gsap.fromTo('.flor-lateral-izq',
                  { opacity: 0, x: -40 },
                  {
                      opacity: 0.8,
                      x: 0,
                      duration: 1.2,
                      ease: 'power3.out'
                  }
              );

              gsap.fromTo('.flor-lateral-der',
                  { opacity: 0, x: 40 },
                  {
                      opacity: 0.8,
                      x: 0,
                      duration: 1.2,
                      ease: 'power3.out'
                  }
              );

              // Corazones
              gsap.fromTo('.corazon-item',
                  { opacity: 0, scale: 0 },
                  {
                      opacity: 1,
                      scale: 1,
                      duration: 0.8,
                      ease: 'back.out(1.7)',
                      stagger: 0
                  }
              );

              // Eventos
              gsap.fromTo('.evento-item',
                  { opacity: 0, y: 30 },
                  {
                      opacity: 1,
                      y: 0,
                      duration: 1,
                      ease: 'power3.out',
                      stagger: 0
                  }
              );
          }
      });
  }
</script>
        }
        75%, 100% {
            transform: scale(1.5);
            opacity: 0;
        }
    }

    .animate-ping {
        animation: ping 2s cubic-bezier(0, 0, 0.2, 1) infinite;
    }

    /* Scroll suave para el modal */
    #modal-foto {
        overflow-y: auto;
    }
</style>